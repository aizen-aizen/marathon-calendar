{
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint || true"
        ]
    },
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "functions/**"
        ],
        "headers": [
            {
                "source": "/firebase-messaging-sw.js",
                "headers": [
                    {
                        "key": "Service-Worker-Allowed",
                        "value": "/"
                    }
                ]
            }
        ]
    }
}